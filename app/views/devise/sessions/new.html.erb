<h4>Sign In</h4>
<div class="row sub_box">
	<div class="span6">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>
    <div class="form-inputs">
	    <%= f.input :login, :required => true, :autofocus => true %>
		<%= f.input :password, :required => true %>
	    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
	    <%= f.button :submit, "Sign in", :class => "btn btn-success"%>
    </div>
	<% end %>

	<%= render "devise/shared/links" %>
	</div>
	<div class="span6 outercontainer">
		<div class="innercontainer">
			<%= link_to omniauth_authorize_path(resource_name, :facebook) do %><%= image_tag "facebook_sign_in.png" %><% end %>
		</div>
	</div>
</div>