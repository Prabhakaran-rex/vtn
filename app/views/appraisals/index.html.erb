<ul class="nav nav-pills">
  <li class="<%= @specializedAppraisals.nil? ? "" : "active" %> pull-right" ><%= link_to appraisals_path(:specialized => true) do %>View only items I specialize in<% end %></li>
  <li class="<%= @specializedAppraisals.nil? ? "active" : "" %> pull-right"><%= link_to appraisals_path do %>View all items<% end %></li>
</ul>
<div class="row">
  <% if @appraisals.empty? %>
    <h3>There are currently no new items available to appraise.</h3>
  <% else %>
    <h3>The following items are available to appraise:</h3>
    <table class="table table-striped table-condensed ">
      <thead>
        <tr>
          <th>Item</th>
          <th>Item #</th>
          <th>Date Created</th>
          <th>Status</th>
          <th>Amount Paid</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @appraisals.each do |appraisal| %>
          <tr>
            <td><%= link_to image_tag(appraisal.photos.first.asset.url(:thumb), :class => "tagThumb"), appraisal, :title => h(appraisal.name) unless appraisal.photos.count == 0 %></td>
            <td><%= link_to(h(appraisal.name) + " ##{appraisal.id}", appraisal) %></td>
            <td><%= distance_of_time_in_words(Time.now,appraisal.updated_at) + " ago" %></td>
            <td><%= getStringForActivityValue(appraisal.status) %></td>
            <td><%= "#{print_amount_paid(appraisal)}"%></br><small><%= "#{print_payout_status(appraisal)}" %></small></td>
            <td><%  %>
                  <%= link_to reply_appraisal_path(appraisal), :class => "btn btn-success btn-mini" do %><i class="icon-edit icon-white"></i> Reply<% end if appraisal.status == EActivityValueClaimed %>
                  <%= link_to appraisal, :class => "btn btn-success btn-mini" do%><i class="icon-folder-open icon-white"></i> View<% end if appraisal.status == EActivityValuePayed %>
                <%= link_to appraisal_path(appraisal, :format => :pdf), :class => "btn btn-success btn-mini" do %>Download PDF<% end if appraisal.status == EActivityValueFinalized%>
            </td>

          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>