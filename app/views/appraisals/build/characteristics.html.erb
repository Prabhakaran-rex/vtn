<center>
  <div class="contentBlock">
    <div class="formTop">
      <span class="title41">Item Characteristics</span>
      <span class="orderStep"><br />2 of 4</span>
    </div>
    <%= simple_form_for(@appraisal, :url => wizard_path, :method => :put,  :html => {:multipart => true, :class => "form-horizontal"}) do |f| %>
      <div class="row sub_box">
      <div>
        <% if @appraisal.errors.any? %>
          <div class="error_explanation">
          <h4><%= "#{pluralize(@appraisal.errors.count, "error")} prohibited this appraisal from being saved:" %></h4>
          <!--          <ul>
            <% @appraisal.errors.full_messages.each do |msg| %>
 <li><%= msg %></li>
          <% end %>
          </ul> -->
        </div>
      <% end %>
      </div>
      <div class="form-inputs">
        <%= f.simple_fields_for :appraisal_info, @appraisal.appraisal_info do |a| %>
          <%= a.input :makers_marks, :label => "Signatures, maker's marks, dates", :as => :text, :input_html => {:class => "span8", :rows => 4}, hint: 'These help with authenticity. A maker’s mark can be a brand name as well as a person’s name. If there are no signatures, maker’s marks or dates then write “none”' %>
        <%= a.input :inscriptions, :label => "Inscriptions,etc", :input_html => {:class => "span8"}, hint: "List all inscriptions, dedications etc. If none write none."%>
        <%= a.input :dimensions, :label => "Dimensions", :input_html => {:class => "span8"}, hint: "What is the width, height, depth? How much does it weigh? Be as specific as you can." %>
        <%= a.input :materials, :label => "Materials", :as => :text, :input_html => {:class => "span8", :rows => 4}, hint: "What is it made out of?" %>
        <%= a.input :damage, :label => "Condition", :as => :text, :input_html => {:class => "span8", :rows => 4}, hint: "List any dings, stains, damages or defects. If the item is mechanical or electrical, is it in good working condition? Does it still have its original box?"%>
      <% end %>
      </div>
      <div>
        <%= link_to "Back", previous_wizard_path, class: "btn btn-success pull-left" %>
        <%= f.button :submit, "Next", class: "btn btn-success pull-right" %>
      </div>
    </div>
  <% end %>
  </div>
</center>

