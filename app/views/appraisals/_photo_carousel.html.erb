<% if @appraisal.photos.count != 0 %>
<%= stylesheet_link_tag "jquery.fancybox-1.3.4" %>
<div class="image_carousel">
	<div id="foo">
		<% @appraisal.photos.each_with_index do |image,i| %>
		<%= link_to image.asset.url(:original), :rel => "fancybox" do %>
		<%= image_tag image.asset.url(:carrousel), :size => "460x460" %>
		<% end %>
		<% end %>
	</div>
	<div class="clearfix" style="padding-top: 5px;"></div>
	<a class="prev pull-left" id="foo_prev" href="#"><span><button class="btn btn-mini btn-sucess"><i class="icon-arrow-left"></i></button></span></a>
	<a class="next pull-right" id="foo_next" href="#"><span><button class="btn btn-mini btn-sucess"><i class="icon-arrow-right"></i></button></span></a>
	<div class="pagination" id="foo_pag"></div>
</div>
<% end %>
