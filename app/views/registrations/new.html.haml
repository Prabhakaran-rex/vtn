#login_panel
    %h1= "Sign up #{@role}"
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
        %p= devise_error_messages!
        %p= f.hidden_field :role, {:value => @role}
        %p= f.label :email
        %p= f.email_field :email
        %p= f.label :password
        %p= f.password_field :password
        %p= f.label :password_confirmation
        %p= f.password_field :password_confirmation
        .terms
            = render :partial => "home/terms_and_conditions"
        %p= f.check_box :agree_to_tos
        %p= f.label "Agree to the Terms of Service"
        %p= f.submit "Sign up"
        = render :partial => "devise/shared/links"
