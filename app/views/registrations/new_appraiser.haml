%h4= "Sign up Appraiser"
.sub_box
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => "form-horizontal"}) do |f|
        %p= devise_error_messages!
        = f.hidden_field :role, {:value => "appraiser"}
        = f.input :name, :input_html => { :value => @name }
        = f.input :email, :input_html => { :value => @email }
        = f.input :password
        = f.input :password_confirmation
        = f.input :access_token, :input_html => { :value => @token }
        .terms
            = render :partial => "home/terms_and_conditions"
        = f.input :agree_to_tos, :as => :boolean, :label => "Agree to terms and conditions", :hint => false
        = f.button :submit, "Sign in"
    = render :partial => "devise/shared/links"