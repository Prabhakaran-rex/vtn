%h4= "Sign up Appraiser"
.sub_box
    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name),:html => {:class => "form-horizontal"}) do |f|
        .form-inputs
            %p= devise_error_messages!
            = f.hidden_field :role, {:value => "appraiser", :class => "input-xxlarge"}
            = f.input :name, :input_html => { :value => @name ,:class => "input-xxlarge"}
            = f.input :username, :input_html => {:class => "input-xxlarge"}, :required => true
            = f.input :email, :input_html => { :value => @email, :class => "input-xxlarge" }
            = f.input :password, :input_html => {:class => "input-xxlarge"}
            = f.input :password_confirmation, :input_html => {:class => "input-xxlarge"}
            .terms
                = raw "#{Cms::Page.find_by_full_path('/appraisal-provider-agreement').content}"
            = f.input :agree_to_tos, :as => :boolean, :label => "Agree to Appraisal Provider Agreement", :hint => false
            = f.input :agree_to_code_of_ethics, :as => :boolean, :label => "I comply with the  #{link_to 'Appraiser Code of Ethics', ethics_path}", :hint => false
        .form-actions
            = f.button :submit, "Sign up", :class => "btn btn-success"
    = render :partial => "devise/shared/links"