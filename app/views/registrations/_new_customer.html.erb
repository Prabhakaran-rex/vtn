<div class="row">
  <div class="col-md-12 big-title">
    Sign-up
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), input_html: {class: "form-horizontal"}) do |f| %>
      <%= tb_field(form: f, field: :name) %>
      <%= tb_field(form: f, field: :email) %>
      <%= tb_field(form: f, field: :password, as: :password) %>
      <%= tb_field(form: f, field: :password_confirmation, as: :password) %>
      <%= tb_field(form: f, field: :agree_to_tos, as: :boolean) %>
      <%= tb_submit_button(title: "Sign Up") %>
    <% end %>
  </div>
  <div class="col-md-6 facebook-sign-in">
    <%= link_to omniauth_authorize_path(:customer, :facebook) do %><%= image_tag "b_fb.jpg" %><% end %>
  </div>
</div>
