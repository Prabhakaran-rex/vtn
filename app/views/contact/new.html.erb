<div class="sub_box">
<%= simple_form_for @message, :url => contact_path, :html => {:class => "form-horizontal"}  do |f| %>
  <% if !current_user %>
    <%= f.input :name %>
    <%= f.input :email %>
  <% else %>
    <%= f.input :name, :input_html => {:value => current_user.name || "Not provided"}, :as => :hidden %>
    <%= f.input :email, :input_html => {:value => current_user.email}, :as => :hidden %>
  <% end %>
  <%= f.input :subject %>
  <%= f.input :body, :as => :text %>

  <div class="form-actions">
    <%= f.submit "Send", :class => "btn btn-primary"%>
  </div>
<% end %>
</div>