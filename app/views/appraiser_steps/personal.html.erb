<%= render :partial => "layouts/doc_has_changed" %>
<%= render :partial => "welcome"%>
<div class="sub_box">
  <%= render :partial => "appraiser_tabs" %>
<div class="alert alert-info">
    <i class="icon-warning-sign"></i>  <strong>NOTICE:</strong> This information is part of your public profile
  </div>
  <div class="row">
    <div class="span6">
      <%= simple_form_for @user, :url => wizard_path, :html => {:class => "form-horizontal"} do |f| %>
      <%= render :partial => "validation_errors" %>

      <%= f.input :name %>
      <%= f.input :email, :disabled => true %>

      <%= f.simple_fields_for :address, @user.address do |a| %>
        <%= a.input :address, :required => @user.class.to_s == "Appraiser"  %>
        <%= a.input :address2, :label => "Addres 2" %>
        <%= a.input :city, :required => @user.class.to_s == "Appraiser" %>
        <%= a.input :state, :label => "State/Province", :required => @user.class.to_s == "Appraiser" %>
        <%= a.input :country, :priority => [ "United States" ], :required => @user.class.to_s == "Appraiser" %>
        <%= a.input :zip, :label => "Postal Code", :required => @user.class.to_s == "Appraiser" %>
        <%= a.input :phone1, :label => "Phone 1", :input_html => {:class => "phone-input"}, :required => @user.class.to_s == "Appraiser" %>
        <%= a.input :phone2, :label => "Phone 2", :input_html => {:class => "phone-input"} %>
        <%= a.input :phone3, :label => "Phone 3", :input_html => {:class => "phone-input"} %>
        <%= a.input :fax, :input_html => {:class => "phone-input"} %>
      <% end %>
  </div>
  <div class="span3 div-gravatar">
      <%= image_tag @user.avatar_url(:small), :size => "180x180", :class => "img-gravatar"%></br>
      <h5>
      <%= link_to new_avatar_path, :class => "btn btn-success btn-mini" do %><i class="icon-camera icon-white"></i> Change your Image<% end %>
      </h5>
     <%= " * To complete your application you must upload your image" if @user.class.to_s == "Appraiser" %>
  </div>
  <div class="span3">      
  </div>
</div>
<div class="form-actions">
    <%= f.submit "Save and Continue", :class => "btn btn-success"%>
  </div>
<% end%> 
</div>