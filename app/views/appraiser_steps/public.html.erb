<script type="text/javascript">
  $(function (){ 
    $('#element').popover();
  });
</script>
<h4>Public Profile</h4>
<div class="sub_box">
  <%= render :partial => "appraiser_tabs" %>
  <div class="alert alert-info">
    <i class="icon-warning-sign"></i>  <strong>NOTICE: </strong> The information entered here will be publicly available throughout the site.
  </div>
  <div class="row">
    <div class="span6">
      <%= simple_form_for @user, :url => wizard_path, :html => {:class => "form-horizontal"} do |f| %>
        <%= render :partial => "validation_errors" %>
        <%= f.simple_fields_for :appraiser_info, @user.appraiser_info do |a| %>
        <%= a.input :public_name, :label => "Name", :required => true %>
        <%= a.input :public_address, :address => "Address" %>
        <%= a.input :public_phone, :label => "Phone", :input_html => {:class => "phone-input"} %>
        <%= a.input :public_email %>
      <% end %>
    </div>
      <div class="span3 div-gravatar">
      <%= image_tag @user.avatar_url(:small), :size => "180x180", :class => "img-gravatar"%></br>
      <h5>
      <%= link_to new_avatar_path, :class => "btn btn-success btn-mini" do %><i class="icon-camera icon-white"></i> Change your Image<% end %>
      </h5>
  </div>
  <div class="span3">      
  </div>
  </div>

<div class="form-actions">
    <%= f.submit "Save and Continue", :class => "btn btn-success"%>
  </div>
<% end%> 