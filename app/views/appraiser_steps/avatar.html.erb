<%= render :partial => "layouts/doc_has_changed" %>
<center>
  <div class="contentBlock">
    <div class="formTop"><span class="title41">Account</span></div>
    <%= render :partial => "appraiser_tabs" %>
    <div class="sub_box">
      <% if current_user.is_appraiser? %>
        <div class="alert alert-info">
        <i class="icon-warning-sign"></i>  <strong>NOTICE:</strong> This information is primarily for the private use of ValueThisNow.com and will not be made public. Only the appraiserâ€™s name, image and website will be made public.
      </div>
    <% end %>
      <div class="row">
        <%= simple_form_for @user, :url => wizard_path, :html => {:class => "form-horizontal"} do |f| %> 
          <div class="span12 div-gravatar">
          <%= image_tag @user.avatar_url(:small), :size => "180x180", :class => "img-gravatar"%></br>
        </div>
      </div>
