<aside id="comments">
  <h1><%= t('title', :scope => 'refinery.blog.posts.show.comments') %></h1>
  <% if (comments = @post.comments.approved).any? %>
    <%= render :partial => "comment", :collection => comments %>
<% else %>
    <p>
  <%= t('none', :scope => 'refinery.blog.shared.comments') %>.
  </p>
<% end %>

  <% flash.each do |key, value| %>
    <div id='flash' class="flash flash_<%= key %>">
    <%= value %>
  </div>
<% end %>

  <h1><%= t('add', :scope => 'refinery.blog.posts.show.comments') %></h1>
  <%= form_for [refinery, :blog, @comment], html: {class: "comment-form"} do |f| %>
    <%= render :partial => "/refinery/admin/error_messages",
      :locals => {
      :object => f.object,
      :include_object_name => true
    } %>
  <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <%= f.label :message %>
    <%= f.text_area :message, :rows => 6 %>
    <div class='field'>
      <%= f.submit t('submit', :scope => 'refinery.blog.posts.show'), class: "btn" %>
    </div>
  <% end %>
  </aside>
