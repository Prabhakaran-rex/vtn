<h1>Listing payments</h1>

<table>
  <tr>
    <th>User</th>
    <th>Appraisal</th>
    <th>Is charged</th>
    <th>Auth code</th>
    <th>Ccnum</th>
    <th>Amount</th>
    <th>Is refund</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.user %></td>
    <td><%= payment.appraisal %></td>
    <td><%= payment.is_charged %></td>
    <td><%= payment.auth_code %></td>
    <td><%= payment.ccnum %></td>
    <td><%= payment.amount %></td>
    <td><%= payment.is_refund %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

